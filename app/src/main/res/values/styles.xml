<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">#FFFFFF</item>
    </style>

    <!-- Base application theme. -->

    <style name="AppTheme.ActionBar.Transparent" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowContentOverlay">@null</item>
        <item name="windowActionBarOverlay">true</item>
        <item name="colorPrimary">#000000</item>
    </style>

    <style name="dayText">
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">#000000</item>
        <item name="android:background">#FFFFFF</item>
    </style>

    <style name="monthText">
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:background">#FFFFFF</item>
    </style>

    <style name="monthTextGone">
        <item name="android:visibility">gone</item>

    </style>

    <style name="arrowGone">
        <item name="android:visibility">gone</item>
    </style>

    <style name="weekText">
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">#9E9E9E</item>
        <item name="android:background">#FFFFFF</item>

    </style>

    <style name="Navigation_menu_item">
        <item name="android:layout_gravity">start</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="SCBSwitch" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">#FF4081</item>

        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">#9E9E9E</item>

        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">#42221f1f</item>
    </style>


    </resources>
