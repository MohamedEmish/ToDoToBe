<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:nestedScrollingEnabled="true"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/section_date_container"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#F5F5F5"
        android:gravity="center_vertical"
        android:nestedScrollingEnabled="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/section_day_name_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:text="MONDAY"
            android:textColor="#9e9e9e" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=","
            android:textColor="#9e9e9e" />

        <TextView
            android:id="@+id/section_month_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:text="FEB"
            android:textColor="#9e9e9e" />

        <TextView
            android:id="@+id/section_day_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="8" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=","
            android:textColor="#9e9e9e" />

        <TextView
            android:id="@+id/section_year_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="2dp"
            android:text="2018" />

    </LinearLayout>

    <!--  recycler view for items -->
    <ListView
        android:id="@+id/section_item_list_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/section_date_container"
        android:layout_marginTop="0dp"
        android:nestedScrollingEnabled="true" />
</RelativeLayout>