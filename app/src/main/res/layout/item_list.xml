<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/event_container"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:background="?android:attr/selectableItemBackground"
    android:gravity="center_vertical"
    android:maxHeight="88dp"
    android:orientation="horizontal">


    <LinearLayout
        android:id="@+id/list_event_state_color"
        android:layout_width="5dp"
        android:layout_height="match_parent"
        android:background="@color/orange"
        android:orientation="horizontal">

    </LinearLayout>
    <ImageView
        android:id="@+id/list_event_image"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginLeft="8dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_marginRight="16dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_calendar_no_eimage" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="5"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/list_title_layout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="bottom"
            android:layout_gravity="bottom"
            android:orientation="horizontal"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="#000000"
            android:textStyle="bold">

            <TextView
                android:id="@+id/list_event_title"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="bottom"
                android:textSize="20sp"
                android:text="@string/item_list_title"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/list_event_with"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="bottom"
                android:textSize="20sp"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:text="@string/item_list_with"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/list_event_people"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="bottom"
                android:textSize="20sp"
                android:textStyle="bold"
                android:text="@string/item_list_people"
                android:textColor="#000000" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/details"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="top"
            android:layout_gravity="top"
            android:orientation="horizontal"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="#9E9E9E">

            <TextView
                android:id="@+id/list_event_time_from"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="top"
                android:text="@string/item_list_time_from" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="top"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:text="-" />

            <TextView
                android:id="@+id/list_event_time_to"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="top"
                android:text="@string/item_list_time_to" />

            <TextView
                android:id="@+id/list_event_time_to_am_pm"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="top"
                android:text="@string/item_list_am" />

            <TextView
                android:id="@+id/list_event_location"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="top"
                android:paddingLeft="16dp"
                android:text="@string/item_list_location" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>